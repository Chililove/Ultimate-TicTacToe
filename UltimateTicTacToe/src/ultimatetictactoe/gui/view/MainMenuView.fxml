<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ultimatetictactoe.gui.controller.MainMenuViewController">
   <children>
      <StackPane prefHeight="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label prefHeight="80.0" prefWidth="249.0" text="Ultimate Tic-Tac-Toe">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane maxHeight="600.0" maxWidth="800.0" prefHeight="340.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="180.0">
         <children>
            <VBox maxHeight="400.0" maxWidth="800.0" prefHeight="400.0" prefWidth="800.0">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <children>
                  <HBox prefHeight="60.0" prefWidth="200.0">
                     <children>
                        <ToggleButton fx:id="btnPlayerVsPlayer" mnemonicParsing="false" onAction="#clickPlayerVsPlayer" prefHeight="40.0" prefWidth="200.0" text="Player vs Player">
                           <toggleGroup>
                              <ToggleGroup fx:id="GameMode" />
                           </toggleGroup>
                           <HBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </HBox.margin>
                        </ToggleButton>
                        <ToggleButton fx:id="btnPlayerVsAi" mnemonicParsing="false" onAction="#clickPlayerVsAi" prefHeight="40.0" prefWidth="200.0" text="Player vs AI" toggleGroup="$GameMode">
                           <HBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </HBox.margin>
                        </ToggleButton>
                        <ToggleButton fx:id="btnAiVsAi" mnemonicParsing="false" onAction="#clickAiVsAi" prefHeight="40.0" prefWidth="200.0" text="AI vs AI" toggleGroup="$GameMode">
                           <HBox.margin>
                              <Insets left="30.0" right="30.0" />
                           </HBox.margin>
                        </ToggleButton>
                     </children>
                  </HBox>
                  <VBox fx:id="vbxOptions">
                     <children>
                        <StackPane fx:id="stcFirstOption" prefHeight="100.0" prefWidth="200.0" />
                        <StackPane fx:id="stcSecondOption" prefHeight="100.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <StackPane prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#clickStart" prefHeight="60.0" prefWidth="400.0" text="START GAME" />
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </children>
      </StackPane>
      <StackPane minHeight="80.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <JFXButton onAction="#clickExit" prefHeight="40.0" prefWidth="150.0" text="Exit">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </JFXButton>
         </children>
      </StackPane>
   </children>
</AnchorPane>
